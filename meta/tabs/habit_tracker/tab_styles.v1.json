{
  "version": "1.0.0",
  "overrides": {
    "component_tokens": {
      "calendar": {
        "grid": "grid grid-cols-[repeat(31,minmax(1.5rem,1fr))] gap-2",
        "day_cell": "rounded-full flex items-center justify-center cursor-pointer text-xs transition-all duration-150",
        "day_cell_complete": "bg-emerald-500 text-black shadow-md",
        "day_cell_incomplete": "bg-neutral-800 hover:bg-neutral-700"
      },
      "habit_filter_pills": {
        "base": "px-3 py-1 rounded-full text-sm font-medium",
        "selected": "bg-emerald-600 text-white",
        "unselected": "bg-neutral-700 text-neutral-300 hover:bg-neutral-600"
      },
      "header": {
        "title": "text-lg font-semibold mb-4",
        "month_labels": "flex justify-between text-xs text-neutral-400 mb-2"
      }
    }
  },
  "layout": {
    "main_container": "p-6 max-w-6xl mx-auto",
    "header": "flex items-center justify-between mb-4",
    "content": "space-y-4"
  },
  "responsive": {
    "mobile": {
      "calendar": "text-[10px] gap-1"
    },
    "desktop": {
      "calendar": "text-xs gap-2"
    }
  }
}


